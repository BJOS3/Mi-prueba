    <!-- ----------- JAVASCRIPT ----------- -->
    <script>
        function agregarRecomendacion() {
            const texto = document.getElementById("nuevaRec").value;

            if (texto.trim() === "") {
                alert("Por favor, escribe una recomendaci√≥n.");
                return;
            }

            const nueva = document.createElement("div");
            nueva.className = "recomendacion";
            nueva.textContent = texto;

            document.getElementById("lista-recomendaciones").appendChild(nueva);
            document.getElementById("nuevaRec").value = "";

            alert("¬°Recomendaci√≥n enviada con √©xito!");
        }

        function volverInicio() {
            window.scrollTo({ top: 0, behavior: "smooth" });
        }
    </script>

